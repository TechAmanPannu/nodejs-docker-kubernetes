{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions" : [
        {
            "name": "client",
            "image": "aman8859/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "aman8859/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "aman8859/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "memory": 128,
            "portMappings":[
                {
                    "hostPort": 80,
                    "containerPort":80
                }
            ],
            "links": ["client", "server"]
        }
    ]

}